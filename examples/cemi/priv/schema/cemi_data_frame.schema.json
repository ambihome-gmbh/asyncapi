{
    "$id": "https://ambihome.com/schemas/cemi_frame.schema.json",
    "title": "cEMI Data Frame",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "message_code": {
            "type": "string",
            "enum": [
                "l_data_req",
                "l_data_ind"
            ],
            "description": "cEMI message code"
        },
        "additional_info": {
            "type": "integer",
            "enum": [
                0
            ],
            "description": "Always 0 (not yet implemented)"
        },
        "ctrl": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "broadcast": {
                    "type": "string",
                    "enum": [
                        "system_broadcast",
                        "broadcast"
                    ]
                },
                "confirm": {
                    "type": "string",
                    "enum": [
                        "ok",
                        "error"
                    ]
                },
                "ack": {
                    "type": "string",
                    "enum": [
                        "no_req_ack",
                        "req_ack"
                    ]
                },
                "addr_t": {
                    "type": "string",
                    "enum": [
                        "ind",
                        "grp"
                    ],
                    "description": "Addressing type"
                },
                "eff": {
                    "type": "integer",
                    "enum": [
                        0
                    ],
                    "description": "Always 0 (not yet implemented)"
                },
                "frame_type": {
                    "type": "string",
                    "enum": [
                        "extended",
                        "standard"
                    ]
                },
                "hops": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 7,
                    "description": "Routing hops"
                },
                "prio": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 3,
                    "description": "Priority"
                },
                "repeat": {
                    "type": "string",
                    "enum": [
                        "repeat_on_error",
                        "do_not_repeat"
                    ]
                }
            },
            "required": [
                "broadcast",
                "confirm",
                "ack",
                "addr_t",
                "eff",
                "frame_type",
                "hops",
                "prio",
                "repeat"
            ]
        },
        "src": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "description": "Source address"
        },
        "dest": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "description": "Destination address"
        },
        "apci": {
            "type": "string",
            "enum": [
                "group_read",
                "group_resp",
                "group_write"
            ]
        },
        "data": {
            "type": "string",
            "contentEncoding": "base64",
            "description": "APCI+APDU bytes, base64-encoded. NOTE: storing APDU together with APCI so that we have full bytes."
        }
    },
    "required": [
        "message_code",
        "additional_info",
        "ctrl",
        "src",
        "dest",
        "apci",
        "data"
    ]
}