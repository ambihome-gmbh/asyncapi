{
  "asyncapi": "3.0.0",
  "x-testcases": [
    {
      "name": "wip",
      "sequence": [
        "user->service: dp_write_ind/{id: 'ch1', value: '0'}",
        "user->service: dp_write_ind/{id: 'ch2', value: '0'}",
        "user->service: alm_get_state[alarm_type: 'alarm_incursion']",
        "service->user: alm_state/{ready_state: ['MONITORED_EMPTY'], alarm_sources: ['ch1', 'ch2']}",
        "user->service: alm_set_config[alarm_type: 'alarm_incursion']/{mails: ['m'], monitored: ['ch1', 'ch2']}"
      ]
    }
  ],
  "info": {
    "description": "Dataponts API description",
    "title": "Datapoints API",
    "version": "0.2"
  },
  "defaultContentType": "application/json",
  "servers": {
    "production": {
      "host": "127.0.0.1",
      "protocol": "mqtt",
      "variables": {
        "port": {
          "default": "1883",
          "enum": [
            "1883"
          ]
        }
      }
    }
  },
  "channels": {
    "dp_write_req": {
      "address": "DP/WRITE_REQ",
      "messages": {
        "dp_write": {
          "name": "dp_write",
          "payload": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "id": {
                "description": "DP ID",
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "value"
            ]
          }
        }
      },
      "description": "testing dummy temp"
    },
    "dp_write_ind": {
      "address": "DP/WRITE_IND",
      "messages": {
        "dp_write": {
          "name": "dp_write",
          "payload": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "id": {
                "description": "DP ID",
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "value"
            ]
          }
        }
      },
      "description": "testing dummy temp"
    }
  },
  "operations": {
    "dp_write_ind": {
      "action": "receive",
      "channel": {
        "$ref": "#/channels/dp_write_ind"
      }
    }
  },
  "components": {
    "schemas": {
      "empty_payload": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "_sender": {
            "description": "sender uuid",
            "type": "string"
          }
        }
      },
      "dp_payload": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": {
            "description": "DP ID",
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "value"
        ]
      }
    }
  }
}